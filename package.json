{
	"name": "notion2wp",
	"description": "Publish content directly from Notion to WordPress",
	"author": "Takshil Kunadia",
	"devDependencies": {
		"@babel/core": "^7.28.4",
		"@babel/preset-env": "^7.28.3",
		"@babel/preset-react": "^7.27.1",
		"@eslint/js": "^9.37.0",
		"@rushstack/eslint-patch": "^1.12.0",
		"@types/react": "^18.3.23",
		"@wordpress/browserslist-config": "^6.31.0",
		"babel-loader": "^10.0.0",
		"eslint": "^9.37.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^6.1.1",
		"globals": "^16.4.0",
		"lint-staged": "^16.2.3",
		"postcss-scss": "^4.0.9",
		"webpack": "^5.102.0",
		"webpack-cli": "^6.0.1"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"lint-staged": {
		"*.scss": "npm run lint:scss:staged",
		"*.(js|jsx)": "npm run lint:js:staged",
		"*.(ts|tsx)": "npm run typescript:check",
		"*.php": "npm run lint:php:staged"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"build": "npm run clean && webpack --config webpack.config.js",
		"start": "npm ci --legacy-peer-deps && webpack --config webpack.config.js --watch",
		"lint": "npm run lint:scss && npm run lint:js",
		"lint:scss": "stylelint '**/*.scss' --syntax scss",
		"lint:scss:staged": "stylelint --cache --syntax scss",
		"lint:js": "eslint . --ext .js,.jsx --no-warn-ignored --config eslint.config.js",
		"lint:js:staged": "eslint . --ext .js,.jsx --no-warn-ignored --config eslint.config.js",
		"typescript:check": "tsc --noEmit",
		"fix:js": "eslint . --ext .js,.jsx --fix --no-warn-ignored --config eslint.config.js",
		"fix:js:staged": "eslint --cache . --ext .js,.jsx --fix --no-warn-ignored --config eslint.config.js",
		"lint:php": "./vendor/bin/phpcs",
		"lint:php:staged": "./vendor/bin/phpcs --filter=GitStaged",
		"fix:php": "./vendor/bin/phpcbf"
	},
	"dependencies": {
		"@wordpress/icons": "^10.32.0"
	}
}
